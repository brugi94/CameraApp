<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.brugnolo.cameraapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#000000">

    <TextureView
        android:layout_height="@dimen/preview_width"
        android:layout_width="@dimen/preview_height"

        android:id="@+id/previewView"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="@dimen/camera_side"
        android:layout_height="@dimen/camera_side"
        android:id="@+id/pictureButton"
        android:onClick="takePhoto"
        android:background="@drawable/btn_camera"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="@dimen/settings_side"
        android:layout_height="@dimen/settings_side"
        android:id="@+id/btn_settings"
        android:background="@drawable/btn_settings"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
